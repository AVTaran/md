<?xml version="1.0"?>
<config>
	<modules>
		<sw_StockLocation>
			<version>0.1.0</version>
		</sw_StockLocation>
	</modules>

	<frontend>
		<layout>
			<updates>
				<swstocklocation>
					<file>sw_stocklocation.xml</file>
				</swstocklocation>
			</updates>
		</layout>
		<routers>
			<swstocklocation>
				<use>standard</use>
				<args>
					<module>sw_StockLocation</module>
					<frontName>stocklocation</frontName>
				</args>
			</swstocklocation>
		</routers>
	</frontend>

	<global>
		<models>
			<swstocklocation>
				<class>sw_StockLocation_Model</class>
				<resourceModel>swstocklocation_resource</resourceModel>
			</swstocklocation>
			<swstocklocation_resource>
				<class>sw_StockLocation_Model_Resource</class>
				<entities>
					<table_block>
						<table>sw_sl_block</table>
					</table_block>
					<table_box>
						<table>sw_sl_box</table>
					</table_box>
					<table_location>
						<table>sw_sl_location</table>
					</table_location>
					<table_section>
						<table>sw_sl_section</table>
					</table_section>
					<table_shelf>
						<table>sw_sl_shelf</table>
					</table_shelf>
					<table_zone>
						<table>sw_sl_zone</table>
					</table_zone>
				</entities>
			</swstocklocation_resource>
		</models>

		<blocks>
			<swstocklocation>
				<class>sw_StockLocation_Block</class>
			</swstocklocation>
		</blocks>

		<helpers>
			<swstocklocation>
				<class>sw_StockLocation_Helper</class>
			</swstocklocation>
		</helpers>

		<resources>
			<swstocklocation_setup>
				<setup>
					<module>sw_StockLocation</module>
				</setup>
			</swstocklocation_setup>
		</resources>
	</global>


	<admin>
		<routers>
			<swstocklocation_admin>
				<use>admin</use>
				<args>
					<module>sw_StockLocation</module>
					<frontName>swstocklocation_admin</frontName>
				</args>
			</swstocklocation_admin>
		</routers>
	</admin>

	<adminhtml>
		<menu>
			<swstocklocation translate="title" module="swstocklocation">
				<title> -=[ Stock Location ]=- </title>
				<sort_order>33</sort_order>
				<action>swstocklocation_admin/adminhtml_stocklocation</action>
				<children>
					<zona>
						<title>Zones</title>
						<sort_order>10</sort_order>
						<action>swstocklocation_admin/adminhtml_stocklocation/zones</action>
					</zona>
					<block>
						<title>Blocks</title>
						<sort_order>20</sort_order>
						<action>swstocklocation_admin/adminhtml_stocklocation/blocks</action>
					</block>
				</children>
			</swstocklocation>
		</menu>
	</adminhtml>


</config>


